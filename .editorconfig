# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript / JavaScript / JSON / HTML
[*.{ts,tsx,js,jsx,json,html,css}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Markdown — 行尾雙空格為換行語法，不可 trim
[*.md]
trim_trailing_whitespace = false

# Shell
[*.{sh,command}]
indent_style = space
indent_size = 2

# Makefile — 必須用 tab
[Makefile]
indent_style = tab
indent_size = 4
